{
    admin off  # Disable admin interface for security
    log {
        output stdout
        format json
        level DEBUG
    }
}

:80 {  # Listen on all interfaces, port 80
    log {
        output stdout
        format json
        level DEBUG
    }

    handle /api/v1/fast* {
        rewrite * /api/v1{uri}
        reverse_proxy fast-api-demo.railway.internal:8080
    }

    handle {
        reverse_proxy fast-api-demo.railway.internal:8080
    }
}
