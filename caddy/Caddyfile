{
    # Enable the global log
    log {
        output stdout
        format json
    }
}

api.htruong83.com {
    tls internal

    handle /api/v1/fast* {
        log {
            output stdout
            format json
        }
        rewrite * /api/v1{uri}
        reverse_proxy fast-api-demo.railway.internal:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle {
        log {
            output stdout
            format json
        }
        reverse_proxy fast-api-demo.railway.internal:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
}
