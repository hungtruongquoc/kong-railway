{
    # Global logging configuration
    log {
        output stdout
        format json
        level DEBUG  # Set to DEBUG to see more detailed logs
    }
}

api.htruong83.com {
    tls internal

    # Log all requests at the site level
    log {
        output stdout
        format json
        level DEBUG
    }

    handle /api/v1/fast* {
        log {
            output stdout
            format json
            level DEBUG
            fields {
                uri {uri}
                host {host}
                method {method}
                remote_ip {remote_ip}
                request_id {request_id}
            }
        }
        rewrite * /api/v1{uri}
        reverse_proxy fast-api-demo.railway.internal:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle {
        log {
            output stdout
            format json
            level DEBUG
            fields {
                uri {uri}
                host {host}
                method {method}
                remote_ip {remote_ip}
                request_id {request_id}
            }
        }
        reverse_proxy fast-api-demo.railway.internal:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
}
